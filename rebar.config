{plugins, [pc]}.

{erl_opts, [debug_info, warn_unused_vars, warn_shadow_vars, warn_unused_import]}.

{port_specs, 
 [
  {"priv/ua_classifier_nif.so", 
   ["c_src/*.c", 
    "c_src/dclass/*.c"]}
 ]
}.
{port_env, [{"CFLAGS", "$CFLAGS -O3 -Wall -fPIC"}]}.

{artifacts, ["priv/ua_classifier_nif.so"]}.

{provider_hooks, 
 [
  {post,
   [
    {compile, {pc, compile}},
    {clean, {pc, clean}}
   ]
  }]
}.

{eunit_opts, [verbose]}.
